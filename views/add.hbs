<h1>Tárgy felvétel</h1>
<form class="form-horizontal col-lg-8 col-lg-offset-2"
      method="post" action="/add">
   <fieldset>
    <div class="form-group">
      <label for="name" class="col-lg-2 control-label">Név: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="name" id="name" 
               placeholder="Új tantárgy">
      </div>
    </div>
    <div class="form-group">
      <label for="leiras" class="col-lg-2 control-label">Leírás: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="leiras" id="leiras" placeholder="Új tárgy leírása">
      </div>
    </div>
     <div class="form-group">
      <label for="teacher" class="col-lg-2 control-label">Oktató: </label>
      <div class="col-lg-10">
        <input type="text" class="form-control" 
               name="teacher" id="teacher" placeholder="Új tárgy oktatója">
      </div>
    </div>
     <div class="form-group">
      <label for="credit" class="col-lg-2 control-label">Kredit érték: </label>
      <div class="col-lg-10">
        <input type="number" class="form-control" min="1" max="20" 
               name="credit" id="credit" placeholder="Új tárgy kredit értéke">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-8 col-lg-offset-2">
        <button type="reset" class="btn btn-default pull-left">Mégse</button>
        <button type="submit" class="btn btn-primary pull-right">Hozzáadás</button>
      </div>
    </div>
  </fieldset>
</form>